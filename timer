<body>
    <div class="clock-container">
        <div class="clock">
            <h2>한국</h2>
            <div id="korea-time"></div>
        </div>
        <div class="clock">
            <h2>영국</h2>
            <div id="uk-time"></div>
        </div>
        <div class="clock">
            <h2>미국 텍사스</h2>
            <div id="texas-time"></div>
        </div>
    </div>

    <script>
        function updateClocks() {
            const now = new Date();
            
            // 한국 시간 (UTC+9)
            document.getElementById('korea-time').textContent = now.toLocaleTimeString('en-US', { 
                timeZone: 'Asia/Seoul',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true 
            });
            
            // 영국 시간 (UTC+0/+1)
            document.getElementById('uk-time').textContent = now.toLocaleTimeString('en-US', { 
                timeZone: 'Europe/London',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true 
            });
            
            // 미국 텍사스 시간 (UTC-5/-6)
            document.getElementById('texas-time').textContent = now.toLocaleTimeString('en-US', { 
                timeZone: 'America/Chicago',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true 
            });
        }

        // 1초마다 시계 업데이트
        setInterval(updateClocks, 1000);
        updateClocks(); // 초기 로드 시 즉시 업데이트
    </script>
</body>
